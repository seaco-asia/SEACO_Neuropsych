<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Intro"
    android:background="@drawable/main_bg"
    android:clipToPadding="false"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:id="@+id/imageView"
        android:layout_above="@+id/intro_button"
        android:layout_centerHorizontal="true"
        android:src="@drawable/main_logo"
       />

    <Button

        android:background="@drawable/button_pink_res"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:text="@string/intro_button"
        android:textSize="33dp"
        android:textColor="@android:color/white"
        android:id="@+id/intro_button"
        android:onClick="endActivity"

        android:layout_gravity="center_horizontal"


        android:layout_centerInParent="true" />



    <RelativeLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="0dp"
                android:layout_weight=".70"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"

                android:src="@drawable/main_seaco"
                />
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".30"
                android:gravity="center_vertical"

                >

                <Button
                    android:layout_width="fill_parent"

                    android:layout_height="wrap_content"
                    android:text="@string/intro_about_button"
                    android:id="@+id/button8"
                    android:onClick="onAboutClicked"
                    />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>
